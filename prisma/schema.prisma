// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// Create User model
model User {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  password  String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  events    Event[]
  guest     Guest[]

  @@index([password])
}

// Create Event model
model Event {
  id          Int      @id @default(autoincrement())
  title       String
  startAt     DateTime
  endAt       DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  link        String   @unique
  description String
  address     String
  guests      Guest[]

  @@index([userId])
  @@index([link])
}

model Guest {
  id       Int          @id @default(autoincrement())
  name     String       @unique
  event    Event?       @relation(fields: [eventId], references: [id])
  eventId  Int?
  response ResponseType
  user     User         @relation(fields: [userId], references: [id])
  userId   Int

  @@index([eventId])
  @@index([userId])
}

enum ResponseType {
  yes
  no
  maybe
}
